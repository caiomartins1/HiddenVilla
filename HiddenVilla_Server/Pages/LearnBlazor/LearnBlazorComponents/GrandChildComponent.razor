<div class="border mt-2">
  <div class="row">
    <h3 class="text-primary pl-4 pt-2 col-12">Grand Child Component</h3>
  </div>
  <div class="row">
    <p>There is a message: @Message</p>
    <p>There is a number: @NumberFromParent</p>
  </div>
</div>


@code
{
  [CascadingParameter(Name = "MessageForGrandChild")]
  public string Message { get; set; }

  [CascadingParameter(Name = "LuckyNumber")]
  public int NumberFromParent { get; set; }
}